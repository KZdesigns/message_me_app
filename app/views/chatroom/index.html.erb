<h4 class="ui center aligned medium icon header">
  <i class="circular orange coffee icon"></i>
  Say Something
</h4>

<!-- beginning two column grid -->
<div class="ui two column grid">
  <!-- chat box -->
  <div class="twelve wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content">
          <div class="ui feed">
            <!-- start of interator -->
          <%= render @messages %>
            <!-- end of interator -->
          </div>
        </div>
        <!-- end content card -->
        <!-- beginning extra content -->
        <div class="extra content">
           <form class="ui reply form">
             <div class="field">
               <div class="ui fluid icon input">
                 <input type="text" placeholder="Enter Message...">
                <i class="bordered inverted orange coffee icon"></i>
              </div>
             </div>
          </form>
        </div>
      </div>
    </div>
  <!-- end of chat box -->

  <!-- user menue -->
  <div class="four wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content">
        <div class="ui inverted vertical menu">
          <a class="item">
            Home
          </a>
          <a class="item">
            Messages
          </a>
          <a class="item">
            Friends
          </a>
        </div>
      </div>
    </div>
  </div>
  <!-- end of user menue -->
</div>
<!-- end two column grid -->
