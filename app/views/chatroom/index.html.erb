<h4 class="ui center aligned medium icon header">
  <i class="circular orange coffee icon"></i>
  Say Something
</h4>

<!-- beginning two column grid -->
<div class="ui two column grid">
  <!-- chat box -->
  <div class="twelve wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content" id="messages">
          <div class="ui feed" id="message-container">
            <!-- start of interator -->
          <%= render @messages %>
            <!-- end of interator -->
          </div>
        </div>
        <!-- end content card -->
        <!-- beginning extra content -->
        <div class="extra content">
           <%= form_for(@message, html: {class: "ui reply form", role: "form"}, url: message_path, remote: true) do |f| %>
             <div class="field">
               <div class="ui fluid icon input">
                  <%= f.text_field :body %>
                  <%= f.button '<i class="bordered inverted orange coffee icon"></i>'.html_safe %>
              </div>
             </div>
          <% end %>
        </div>
      </div>
    </div>
  <!-- end of chat box -->

  <!-- user menue -->
  <div class="four wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content">
        <div class="ui inverted vertical menu">
          <a class="item">
            Home
          </a>
          <a class="item">
            Messages
          </a>
          <a class="item">
            Friends
          </a>
        </div>
      </div>
    </div>
  </div>
  <!-- end of user menue -->
</div>
<!-- end two column grid -->
